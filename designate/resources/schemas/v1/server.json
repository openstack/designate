{
    "id": "server",

    "$schema": "http://json-schema.org/draft-03/hyper-schema",

    "title": "server",
    "description": "Server",
    "additionalProperties": false,

    "properties": {
        "id": {
            "type": "string",
            "description": "Server Identifier",
            "pattern": "^([0-9a-fA-F]){8}-([0-9a-fA-F]){4}-([0-9a-fA-F]){4}-([0-9a-fA-F]){4}-([0-9a-fA-F]){12}$",
            "readonly": true
        },
        "name": {
            "type": "string",
            "description": "Server DNS name",
            "format": "host-name",
            "maxLength": 255,
            "required": true
        },
        "created_at": {
            "type": "string",
            "description": "Date and time of server creation",
            "format": "date-time",
            "readonly": true
        },
        "updated_at": {
            "type": ["string", "null"],
            "description": "Date and time of last server update",
            "format": "date-time",
            "readonly": true
        }
    },
    "links": [{
        "rel": "self",
        "href": "/servers/{id}"
    }, {
        "rel": "collection",
        "href": "/servers"
    }]
}
